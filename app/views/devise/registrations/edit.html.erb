<h2 class='text-center'>Редактирование настроек</h2>

<div class="col-sm-6 col-sm-offset-3">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true, label: 'Имя' %>
      <%= f.input :email, required: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, autocomplete: "off", hint: "оставьте пустым, если не хотите менять", required: false, label: 'Пароль' %>
      <%= f.input :password_confirmation, required: false, label: 'Подтверждение пароля' %>
      <%= f.input :current_password, hint: "введите текущий пароль для подтверждения изменений", required: true, label: 'Текущий пароль' %>
    </div>

    <div class="form-actions pull-right">
      <%= f.button :submit, "Применить изменения", class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
