<div class="col-sm-6 col-sm-offset-3">
  <h2>Вход</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :login, required: false, autofocus: true, label: 'Имя пользователя или email' %>
      <%= f.input :password, required: false, label: 'Пароль' %>
    </div>
    <div class="text-right">
      <%= f.input :remember_me, as: :boolean, label: 'Запомнить меня' if devise_mapping.rememberable? %>
      <div class="form-actions">
        <%= f.button :submit, "Войти", class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
